@model Tactsoft.Core.Entities.Supplier

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title">@ViewData["Title"] Details</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.SupplierName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.SupplierName)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.ContactPerson)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.ContactPerson)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.SupplierEmail)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.SupplierEmail)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.SupplierPhone)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.SupplierPhone)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.SupplierAddress)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.SupplierAddress)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Country.CountryName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Country.CountryName)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.State.StateName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.State.StateName)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.City.CityName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.City.CityName)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.PostalCode)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.PostalCode)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">

                        <a class="btn btn-outline-danger btn-sm mr-2" asp-action="Index">
                            <i class="far fa-window-close"></i> Cancel
                        </a>
                        <a class="btn btn-outline-primary btn-sm me-3" asp-action="Edit" asp-route-id="@Model?.Id">
                            <i class="fa-regular fa-pen-to-square"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
